<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E80B0101"
    android:orientation="vertical"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/image1"
        app:shapeAppearanceOverlay="@style/SpecificCornerRounded"

        />
</RelativeLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginLeft="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cappuccino"
            android:drawableRight="@drawable/love"
            android:textStyle="bold"
            android:fontFamily="sans-serif-thin"
            android:textColor="#C3BBBB"
            android:textSize="30dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drizzled with Caramel                    4.5"
            android:textSize="23dp"
            android:drawableRight="@drawable/star"
            android:textColor="#9C9999"
            android:layout_marginTop="5dp"
            />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="A single espresso shot poured into hot foamy milk.
 with the surface topped with mildly sweetened cocoa
  powder and drizzled with scrumptious caramel syrup "
             android:layout_marginTop="8dp"
             android:textColor="#878181"
             />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Choice of Milk"
    android:layout_marginTop="30dp"
    android:textSize="20dp"
    android:textColor="#C3BBBB"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="10dp"
             >
    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Oat Milk"
        android:textStyle="bold"
        android:textColor="#302F2F"
        android:backgroundTint="#C3F6F1F1"
        />

             <Button
                 android:layout_width="120dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="6dp"
                 android:textStyle="bold"
                 android:text="Soy Milk"
                 android:textColor="#918F8F"
                 android:backgroundTint="#E80B0101"
                 />

             <Button
                 android:layout_width="130dp"
                 android:layout_height="50dp"
                 android:layout_marginLeft="6dp"
                 android:text="Almond Milk"
                 android:textStyle="bold"
                 android:textColor="#918F8F"
                 android:backgroundTint="#E80B0101"

                 />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="45dp">

             <LinearLayout
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="140dp"
                     android:layout_height="50dp"
                     android:text="Price"
                     android:textColor="#5CBDB7B7"
                     android:textSize="20dp"
                     />
             <TextView
                 android:layout_width="140dp"
                 android:layout_height="50dp"
                 android:text="â‚¹ 249"
                 android:layout_marginLeft="10dp"
                 android:textStyle="bold"
                 android:fontFamily="sans-serif-thin"
                 android:textColor="#C3BBBB"
                 android:textSize="27dp"
                 android:layout_marginTop="-27dp"
                 />
             </LinearLayout>

         <Button
             android:layout_width="240dp"
             android:layout_height="60dp"
             android:layout_marginLeft="6dp"
             android:text="BUY NOW"
             android:textSize="20dp"
             android:id="@+id/buynow"
             android:textStyle="bold"
             android:textColor="#302F2F"
             android:backgroundTint="#C3F6F1F1"
             android:layout_gravity="right"
             android:layout_marginTop="40dp"

             />

         </LinearLayout>

</LinearLayout>

     </LinearLayout>
    </LinearLayout>